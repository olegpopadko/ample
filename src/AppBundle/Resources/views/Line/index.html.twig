{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Line list</h1>

    <table class="table records_list">
        <thead>
            <tr>
                <th>Created At</th>
                <th>Content</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.content }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
